{
  "name": "gmail-linux",
  "version": "1.0.1",
  "description": "Gmail Web Client",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "repository": "",
  "keywords": [
    "Gmail",
    "application",
    "client",
    "app"
  ],
  "homepage": "https://github.com/slobodan-rs/GmailApp",
  "author": "sudo Coby <sudoslobodan@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^20.0.3"
  },
  "build": {
    "linux": {
      "target": [
        {
          "target": "pacman",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "appimage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "desktop": {
        "Icon": "org.gnome.Geary",
        "Name": "Gmail",
        "Actions": [
          "Network",
          "WebBrowser"
        ]
      }
    }
  }
}
